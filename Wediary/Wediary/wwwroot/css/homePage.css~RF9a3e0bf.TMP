@import url('https://fonts.googleapis.com/css2?family=Andika+New+Basic:ital@1&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Lobster&display=swap');

body {
    margin: 0px;
    padding-bottom: 0px;
    font-family: 'Montserrat', sans-serif;
    font-size: 17px;
    background-image: url("../images/img/xv.png");
    min-height: 100%;
}

.picture-container {
    margin-left: auto;
    margin-right: auto;
}

.logoName {
    font-size: 25px;
    font-weight: 700;
    color: black;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-top: 10px;
    margin-bottom: 10px;
    display: inline-block;
}

.navbar-nav {
    font-size: 14px;
    font-weight: 500;
    color: #5C5200;
    letter-spacing: 2px;
    margin-left: 10px;
    margin-right: 10px;
}

    .navbar-nav > li {
    }

    .navbar-nav a:hover {
        color: #A4961F;
    }

.navbar {
    min-height: 57px;
}

.navbar-nav li:hover > .dropdown-menu {
    display: block;
}

.bg-blue {
    background-color: #A3C6C6 !important;
}


.titlename {
    font-family: 'Lexend Tera', sans-serif;
    color: #B4D7D7;
}

.footer {
    bottom: 0;
    width: 100%;
    padding-top: 20px;
    position:relative;
    margin-bottom: 0;
}

.container {
    margin-top: 40px;
    margin-left: auto;
    margin-right: auto;
    background-image: url("../images/img/geometric-leaves.png");
    margin-bottom: 40px;
    border: 5px solid #665E17;
}

.left-part {
    margin-left: auto;
    margin-right: auto;
    float: left;
    margin-top: 25px;
    padding: 25px;
    min-height: 500px;
    width: 350px;
}

.simple-text {
    padding: 20px;
    font-size: 17px;
    font-family: 'Andika New Basic', sans-serif;
}

.title-text {
    padding: 25px;
    font-size: 45px;
    font-family: 'Lobster', cursive;
    color: #665E17;
}

.right-part {
    margin-left: auto;
    margin-right: auto;
    float: left;
    margin-top: 25px;
    padding: 25px;
    min-height: 500px;
    width: 350px;
    text-align: center;
}

    .right-part p {
        min-height: 25px;
        font-family: 'Lexend Tera', sans-serif;
        font-size: 20px;
        min-width: 50px;
    }

.kafelek {
    margin: 30px;
    width: 230px;
    height: 145px;
    background-color: #FAE8CC;
    float: left;
    text-align: center;
    padding: 25px;
}

    .kafelek:hover {
        background-color: #E9D7bb;
    }


.dzialy {
    margin-left: auto;
    margin-right: auto;
    width: 950px;
    text-align: justify;
    padding: 0;
    margin-bottom: 100px;
}

.calendarInfo {
    background-color: #A4961F;
    text-align: center;
    color: #5C5200;
    font-size: 36px;
    border: 2px solid #5C5200;
    border-radius: 10px;
    margin-left: 50px;
}

.sekcje {
    text-align: left;
    padding: 25px;
    color: #EEE;
    font-size: 25px;
}

.postcard {
    display: inline-block;
    width: 435px;
    text-align: center;
    padding: 15px;
}

    .postcard p {
        padding: 5px;
        margin-top: 10px;
    }

.splide__slide img {
    width: 100%;
    height: auto;
}

.overlay {
    position: relative;
    width: 100%;
}

    .overlay .textOverlay {
        position: absolute;
        text-align: center;
        width: 100%;
        height: 80px;
        color: #d8d6d6;
        background-color: #202020;
        left: 0px;
        bottom: 0px;
        opacity: 0;
        transition: opacity 0.5s ease-in-out;
        font-size: 40px;
    }

    .overlay:hover .textOverlay {
        opacity: 0.8;
    }

.divider {
    border-bottom: 1.5px solid #A4961F;
   
}

.headerText {
    color: #A4961F;
    font-size: 24px;
    font-weight: bold;
    margin-top: 30px;
}

.labelText {
    color: #A4961F;

}

.inputStyle {
    border: 1px solid #A4961F;
    color: #A4961F;
    background-color: #d8e9ec;
}

.buttonSize {
    width: 100px;
}

