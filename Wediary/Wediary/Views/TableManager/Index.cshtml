@using Wediary.Data.Models;
@model IEnumerable<Project>;

@{ 
    ViewData["Title"] = "Lista Projektów";
}


<link href="~/css/fontello.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <h2 class="col-sm-12 headerText" >Lista projektów sal</h2>
        <div class="col-sm-2">
            <a asp-area="" asp-controller="TableManager" asp-action="AddProject" class="btn buttonSizeBigger">Dodaj projekt</a>
        </div>
    </div>
    <div class="col align-self-center">

        <table class="table table-hover table-responsive text-center">
            <thead class="thead-dark">
                <tr>
                    <th class="text-center" scope="col">Lp</th>
                    <th class="text-center" scope="col">Nazwa projektu</th>
                    <th class="text-center" scope="col">Data utworzenia</th>
                    <th class="text-center" scope="col">Operacja</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Select((value, i) => new { i = i + 1, value }))
                {
                    <tr class="bg-success">
                        <th class="text-center" scope="row">@item.i</th>

                        <td>
                            <div >
                                <a class="btn buttonSize" asp-controller="TableManager" asp-action="Manager" asp-route-name="@item.value.Name" asp-route-id="@item.value.IdProject">
                                        @item.value.Name
                                </a>
                            </div>
                        </td>
                        <td>
                            <div ><i class="fa fa-calendar iconActive">   @item.value.CreationDate.Day-@item.value.CreationDate.Month-@item.value.CreationDate.Year</i> </div>
                        </td>
                        <td>
                            <a asp-controller="TableManager" asp-action="Delete" asp-route-id="@item.value.IdProject" class="btn buttonSizeDanger">Usuń</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
