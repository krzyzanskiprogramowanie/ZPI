@using Wediary.Models.TaskUser
@model TaskUserModel
@{
    ViewData["Title"] = "Modyfikacja Zadania";
}


<div class="container">
    <h2 class="col-md-12">Edycja Zadania</h2>
    <form asp-controller="Task" asp-action="UpdateTask" asp-route-id="@Model.Id" method="post">
        <div class="form-group row col-lg-12">
            <label class="col-sm-4 col-form-label text-right">Nazwa Zadania</label>
            <div class="col-sm-6">
                <input asp-for="Name" asp type="text" class="form-control" id="inputName">
            </div>
        </div>
        <div class="form-group row col-lg-12">
            <label class="col-sm-4 col-form-label text-right">Wykonawca</label>
            <div class="col-sm-6">
                <input asp-for="Contractor" type="text" class="form-control" id="inputSurName">
            </div>
        </div>
        <div class="form-group row col-lg-12">
            <label class="col-sm-4 col-form-label text-right">Kategoria</label>
            <div class="col-sm-6">
                <input asp-for="Category" type="text" class="form-control" id="inputSurName">
            </div>
        </div>
        <div class="form-group row col-lg-12">
            <label class="col-sm-4 col-form-label text-right">Potrzebna ilość</label>
            <div class="col-sm-6">
                <input asp-for="Quantity" type="number" class="form-control" id="inputSurName">
            </div>
        </div>
        <div class="form-group row col-lg-12">
            <label class="col-sm-4 col-form-label text-right">Jednostak ilości</label>
            <div class="col-sm-6">
                <input asp-for="Unit" type="text" class="form-control" id="inputRole">
            </div>
        </div>
        <div class="form-group row col-lg-12">
            <label class="col-sm-4 col-form-label text-right">Spodziewana cena</label>
            <div class="col-sm-6">
                <input asp-for="ExpectedPrice" class="form-control" id="inputDiet"  type="text" pattern="(^[0-9]{0,2}$)|(^[0-9]{0,2}.[0-9]{0,5}$)" step="any" maxlength="7" validate="true">
            </div>
        </div>
        <div class="form-group row col-lg-12">
            <label class="col-sm-4 col-form-label text-right">Zaliczka</label>
            <div class="col-sm-6">
                <input asp-for="Payment" type="text" step="any" class="form-control" id="accomodation">
            </div>
        </div>
        <div class="form-group row col-lg-12">
            <label class="col-sm-4 col-form-label text-right">Data realizacji</label>
            <div class="col-sm-6">
                <input asp-for="Date" type="date" class="form-control" id="aftermath">
            </div>
        </div>
        <div class="form-group row col-md-6">
            <button type="submit" class="btn btn-primary">Zmień</button>
            <a class="btn btn-warning" asp-controller="Task" asp-action="Index">Powróć do Listy</a>
        </div>
    </form>
</div>

