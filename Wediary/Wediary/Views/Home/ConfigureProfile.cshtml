@model Wediary.Models.HelpModels.ProfileModel;

<div class="container">
    <h2 class="col-md-12">Panel Pary</h2>
    <form asp-controller="Home" asp-action="ConfigureProfile" method="post">
        <div class="form-group row col-lg-12">
            <label class="col-sm-4 col-form-label text-right">Imie panny młodej</label>
            <div class="col-sm-6">
                <input asp-for="BrideName" asp type="text" class="form-control" id="inputName" placeholder="imie">
            </div>
        </div>
        <div class="form-group row col-lg-12">
            <label class="col-sm-4 col-form-label text-right">Nazwisko panny młodej</label>
            <div class="col-sm-6">
                <input asp-for="BrideSurname" asp type="text" class="form-control" id="inputName" placeholder="nazwisko">
            </div>
        </div>
        <hr />
        <div class="form-group row col-lg-12">
            <label class="col-sm-4 col-form-label text-right">Imie pana młodego</label>
            <div class="col-sm-6">
                <input asp-for="GroomName" type="text" class="form-control" id="inputSurName" placeholder="imię">
            </div>
        </div>
        <div class="form-group row col-lg-12">
            <label class="col-sm-4 col-form-label text-right">Nazwisko pana młodego</label>
            <div class="col-sm-6">
                <input asp-for="GroomSurname" type="text" class="form-control" id="inputSurName" placeholder="nazwisko">
            </div>
        </div>
        <div class="form-group row col-lg-12">
            <label class="col-sm-4 col-form-label text-right">Budżet</label>
            <div class="col-sm-6">
                <input asp-for="Budget" type="text" class="form-control" id="inputRole" placeholder="budżet">
                <span asp-validation-for="Budget" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row col-lg-12">
            <label class="col-sm-4 col-form-label text-right">Data ślubu</label>
            <div class="col-sm-6">
                <input asp-for="WeddingDate" type="date" data-date="" data-date-format="DD MMMM YYYY" value="@DateTime.Now"  class="form-control" id="inputDiet">
            </div>
        </div>
        <div class="form-group row col-md-6">
            <button type="submit" class="btn btn-primary">Stwórz</button>
            <a class="btn btn-warning" asp-controller="Guest" asp-action="Index">Powróć do Listy</a>
        </div>
    </form>
</div>
