<link href="~/css/homePage.css" rel="stylesheet" />
<link href="~/css/splide.min.css" rel="stylesheet" />
<link href="~/css/splide-skyblue.min.css" rel="stylesheet" />
@model Wediary.Models.HelpModels.MainPageDataModel;

@{
    ViewData["Title"] = "Panel ślubu";
}

<section>
    <br />

    <div id="image-slider" class="splide">
        <div class="splide__track">
            <ul class="splide__list">
                <li class="splide__slide">
                    <img src="~/images/img/obraczki i kwiat.jpg">
                    <h3>Weddiary</h3>
                    <div class="splideText">
                        Zaplanuj swoje wymarzone wesele!
                    </div>
                </li>
                <li class="splide__slide" style="width: 110%">
                    <img src="~/images/img/img 1600x1200/weddingtables-1600x1200.jpg" />
                    <h3>Weddiary</h3>
                    <div class="splideText">
                        Zaplanuj posadzenie gości i stoły!
                    </div>
                </li>
                <li class="splide__slide" style="width: 110%">
                    <img src="~/images/img/img 1600x1200/stol weselny.jpg" />
                    <h3>Weddiary</h3>
                    <div class="splideText">
                        Zapanuj nad listą gości!
                    </div>
                </li>
            </ul>
        </div>
    </div>

    <div class="container-fluid">

        <div class="row">
            <asaide class="col-12" style="min-height: 25px;"></asaide>
            <div class="left-part">
                <div class=" col-md-5 m-5">
                    <img src="~/images/img/lista różowa.jpg" class="img-fluid">
                </div>
            </div>
            <div class="right-part">
                <div class="col-md-12 text-center bg-info">
                    <h2><img src="~/images/img/kalendarz1.jpg" class="img-fluid"></h2>
                    <div class="text-left">
                        @if ((String.IsNullOrWhiteSpace(Model.FullNameGroom) && String.IsNullOrWhiteSpace(Model.FullNameBride)))
                        {
                            <p class="alert-info">Pan Młody & Pani Młoda</p>

                        }
                        else if (String.IsNullOrWhiteSpace(Model.FullNameBride))
                        {
                            <p class="alert-info"> @Model.FullNameGroom & Pani Młoda </p>

                        }
                        else if (String.IsNullOrWhiteSpace(Model.FullNameGroom))
                        {

                            <p class="alert-info">Pan Młody & @Model.FullNameBride</p>

                        }
                        else
                        {
                            <p class="alert-info">@Model.FullNameBride & @Model.FullNameGroom</p>
                        }
                        @if (!(Model.WeddingDate == "1.1.1"))
                        {
                            <p class="alert-info">Data ślubu: @Model.WeddingDate </p>

                        }


                    </div>
                </div>
            </div>
            <div class="style=clear:both;"></div>
        </div>
        <div class="row">
            <div class="kafelek col-md-3 ">
                <p> Ukończone zadania </p>
                <p> @Model.EndTasks / @Model.CounterTask </p>
            </div>
            <div class="kafelek col-md-3">
                <p> Porwierdzenie Goście </p>
                <p>  @Model.ConfirmGuests / @Model.CounterGuest </p>
            </div>
            <div class="kafelek col-md-3">
                <p> Budżet: </p>
                <p> @Model.Budget </p>
            </div>
        </div>
    </div>
</section>

<script src="~/js/splide.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        new Splide('#image-slider', {
            'cover': true,
            'heightRatio': 0.35,
            type: 'fade',
            rewind: true

        }).mount();
    });
</script>
