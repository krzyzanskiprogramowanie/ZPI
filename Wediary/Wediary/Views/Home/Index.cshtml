<link href="~/css/homePage.css" rel="stylesheet" />
<link href="~/css/splide.min.css" rel="stylesheet" />
<link href="~/css/splide-skyblue.min.css" rel="stylesheet" />
@model Wediary.Models.HelpModels.MainPageDataModel;

@{
    ViewData["Title"] = "Panel ślubu";
}

<section>

    <div class="container-fluid">
        <!-- slider -->
        <div class="row">
            <div class="col-12">
                <div id="image-slider" class="splide">
                    <div class="splide__track">
                        <ul class="splide__list">
                            <li class="splide__slide">
                                <div class="overlay">
                                    <img src="~/images/img/img 1600x500/obraczki i kwiat 1600x500.jpg" />
                                    <div class="textOverlay">
                                        Zaplanuj swoje wymarzone wesele!
                                    </div>
                                </div>
                            </li>
                            <li class="splide__slide">
                                <div class="overlay">
                                    <img src="~/images/img/img 1600x500/weddingtables-1600x500.jpg" />
                                    <div class="textOverlay">
                                        Zaplanuj miejsca gości i układ sali!
                                    </div>
                                </div>
                            </li>
                            <li class="splide__slide">
                                <div class="overlay">
                                    <img src="~/images/img/img 1600x500/stol weselny 1600x500.jpg" />
                                    <div class="textOverlay">
                                        Zapanuj nad listą gości!
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- slider -->

        <hr class="featurette-divider">

        <div class="row featurette">

            <div class="col-lg-5">
                <!--  <img class="featurette-image img-fluid mx-auto" data-src="holder.js/500x500/auto" alt="500x500" src=""true" style="width: 500px; height: 500px;"> -->
                <div class="right-part">
                    <div class="calendarInfo blueBox">
                        <div>
                            <h2><img src="~/images/img/kalendarz1.jpg" class="img-fluid" style="width:auto; height: auto;"></h2>
                            <div class="text-center blueBox">
                                @if ((String.IsNullOrWhiteSpace(Model.FullNameGroom) && String.IsNullOrWhiteSpace(Model.FullNameBride)))
                                {
                                    <p class="">Pan Młody & Pani Młoda</p>

                                }
                                else if (String.IsNullOrWhiteSpace(Model.FullNameBride))
                                {
                                    <p class=""> @Model.FullNameGroom & Pani Młoda </p>

                                }
                                else if (String.IsNullOrWhiteSpace(Model.FullNameGroom))
                                {

                                    <p class="">Pan Młody & @Model.FullNameBride</p>

                                }
                                else
                                {
                                    <p class="">@Model.FullNameBride & @Model.FullNameGroom</p>
                                }
                                @if (!(Model.WeddingDate == "1.1.1"))
                                {
                                    <p class="">Data ślubu: @Model.WeddingDate </p>

                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="row">
                    <a asp-area="" asp-controller="Task" asp-action="Index">
                        <div class="kafelek col-md-4 ">
                            <p> Ukończone zadania </p>
                            <p> @Model.EndTasks / @Model.CounterTask </p>
                        </div>
                    </a>
                    <a asp-area="" asp-controller="Guest" asp-action="Index">
                        <div class="kafelek col-md-4">
                            <p> Porwierdzenie Goście </p>
                            <p>  @Model.ConfirmGuests / @Model.CounterGuest </p>
                        </div>
                    </a>
                    <a asp-area="" asp-controller="Home" asp-action="ConfigureProfile">
                        <div class="kafelek col-md-4">
                            <p> Budżet: </p>
                            <p> @Model.Budget </p>
                        </div>
                    </a>
                </div>
            </div>
        </div>

        <hr class="featurette-divider">

    </div>
</section>

<script src="~/js/splide.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        new Splide('#image-slider', {
            type: 'fade',
            rewind: true,
            width: '100vw',
            perPage: 1,
            autoplay: true,
            pauseOnHover: true,
        }).mount();
    });
</script>
