@using Microsoft.AspNetCore.Identity
@using Wediary.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    <link href="~/css/homePage.css" rel="stylesheet" />


    @if (SignInManager.IsSignedIn(User))
    {
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
            <ul class="nav navbar-nav navbar-right" style="text-decoration: none;">
                <li class="buttonMenu">
                    <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Witaj @UserManager.GetUserName(User)!</a>
                </li>
                <li class="buttonMenu2">
                    <button type="submit" class="btn btn-link navbar-btn " id="logOutButton"> <i class="fa fa-user-lock"></i><span> Wyloguj</span></button>
                </li>
            </ul>
        </form>
    }
    else
    {
        <ul class="nav navbar-nav navbar-right">
            <li class="buttonMenu"><a asp-area="" asp-controller="Account" asp-action="Register">Rejestracja</a></li>
            <li class="buttonMenu"><a asp-area="" asp-controller="Account" asp-action="Login">Logowanie</a></li>
        </ul>
    }
