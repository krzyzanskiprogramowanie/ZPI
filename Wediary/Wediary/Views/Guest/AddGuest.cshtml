@model Wediary.Models.Guest.GuestModel;

<div class="container">
    <h2 class="col-md-12">Tworzenie gościa</h2>
    <form asp-controller="Guest" asp-action="SaveChanges" method="post">
        <div class="form-group row col-lg-12">
            <label class="col-sm-4 col-form-label text-right">Imie</label>
            <div class="col-sm-6">
                <input asp-for="Name" asp type="text" class="form-control" id="inputName" placeholder="imie">
            </div>
        </div>
        <div class="form-group row col-lg-12">
            <label class="col-sm-4 col-form-label text-right">Nazwisko</label>
            <div class="col-sm-6">
                <input asp-for="Surname" type="text" class="form-control" id="inputSurName" placeholder="nazwisko">
            </div>
        </div>
        <div class="form-group row col-lg-12">
            <label class="col-sm-4 col-form-label text-right">Rola</label>
            <div class="col-sm-6">
                <input asp-for="Role" type="text" class="form-control" id="inputRole" placeholder="rola">
            </div>
        </div>
        <div class="form-group row col-lg-12">
            <label class="col-sm-4 col-form-label text-right">Dieta</label>
            <div class="col-sm-6">
                <input asp-for="DescriptionDiet" type="text" class="form-control" id="inputDiet" placeholder="jakaś dieta/uczuleni">
            </div>
        </div>
        <div class="form-group row col-lg-12">
            <label class="col-sm-4 col-form-label text-right">Czy nocleguje?</label>
            <div class="form-check">
                <input asp-for="IfAccommodation" type="checkbox" class="form-check-input col-sm-2" id="accomodation">
            </div>
        </div>
        <div class="form-group row col-lg-12">
            <label class="col-sm-4 col-form-label text-right">Czy będzie na poprawinach?</label>
            <div class="form-check">
                <input asp-for="IfAftermath" type="checkbox" class="form-check-input col-sm-2" id="aftermath">
            </div>
        </div>
        <div class="form-group row col-lg-12">
            <label class="col-sm-4 col-form-label text-right">Czy potwierdza przybycie?</label>
            <div class="form-check">
                <input asp-for="InvitationStatus" type="checkbox" class="form-check-input col-sm-2" id="invitationStatus">
            </div>
        </div>
        <div class="form-group row col-md-6">
            <button type="submit" class="btn btn-primary">Dodaj</button>
            <a class="btn btn-warning" asp-controller="Guest" asp-action="Index">Powróć do Listy</a>
        </div>
    </form>
</div>
